{
  "Node": {
    "Port": 4949,

    "Modules": [
      "Munin.Node.Plugins.Hardware.dll",
      "Munin.Node.Plugins.PerformanceCounter.dll"
    ]
  },

  "Hardware": {
    "Sensor": [
      // Motherboard
      {
        "Name": "motherboard_temperature",
        "Hardware": [ "SuperIO" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "motherboard_fan",
        "Hardware": [ "SuperIO" ],
        "Sensor": "Fan"
      },
      // CPU
      {
        "Name": "cpu_load",
        "Hardware": [ "Cpu" ],
        "Sensor": "Load"
      },
      {
        "Name": "cpu_clock",
        "Hardware": [ "Cpu" ],
        "Sensor": "Clock",
        "Exclude": [ { "Name": "Bus Speed" } ]
      },
      {
        "Name": "cpu_temperature",
        "Hardware": [ "Cpu" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "cpu_power",
        "Hardware": [ "Cpu" ],
        "Sensor": "Power",
        "Include": [ { "Name": "Package" } ]
      },
      {
        "Name": "cpu_voltage",
        "Hardware": [ "Cpu" ],
        "Sensor": "Voltage"
      },
      // GPU
      {
        "Name": "gpu_clock",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Clock"
      },
      {
        "Name": "gpu_clock",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Fan"
      },
      {
        "Name": "gpu_load",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Load",
        "Include": [ { "Name": "GPU Core" }, { "Name": "GPU Memory Controller" } ]
      },
      {
        "Name": "gpu_temperature",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "gpu_throughput",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Throughput"
      },
      // Memory
      {
        "Name": "memory_load",
        "Hardware": [ "Memory" ],
        "Sensor": "Load"
      },
      // Storage
      {
        "Name": "storage_used",
        "Hardware": [ "Storage" ],
        "Sensor": "Load",
        "Include": [ { "Name": "Used Space" } ]
      },
      {
        "Name": "storage_throughput",
        "Hardware": [ "Storage" ],
        "Sensor": "Throughput"
      },
      {
        "Name": "storage_data",
        "Hardware": [ "Storage" ],
        "Sensor": "Data"
      },
      {
        "Name": "storage_temperature",
        "Hardware": [ "Storage" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "storage_life",
        "Hardware": [ "Storage" ],
        "Sensor": "Level",
        "Include": [ { "Name": "Percentage Used" } ]
      },
      {
        "Name": "storage_spare",
        "Hardware": [ "Storage" ],
        "Sensor": "Level",
        "Include": [ { "Name": "Available Spare" } ]
      },
      // Network
      {
        "Name": "network_load",
        "Hardware": [ "Network" ],
        "Sensor": "Load"
      },
      {
        "Name": "network_throughput",
        "Hardware": [ "Network" ],
        "Sensor": "Throughput"
      },
      {
        "Name": "network_data",
        "Hardware": [ "Network" ],
        "Sensor": "Data"
      }
    ],
    "MemoryLoad": {
      "Name": "memory_usage",
      "Enable": true
    }
  },

  "PerformanceCounter": {
    "Counter": [
      {
        "Name": "uptime",
        "Object": "System",
        "Counter": "System Up Time",
        "Multiply": 1.1574074074074073e-005,
        "GraphCategory": "system",
        "GraphTitle": "Uptime",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "AREA"
      }
    ]
  },

  "Logging": {
    "EventLog": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning"
      }
    }
  }
}
