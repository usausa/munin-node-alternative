{
  "Node": {
    "Port": 4949,

    "Modules": [
      //"Munin.Node.Plugins.Hardware.dll",
      "Munin.Node.Plugins.PerformanceCounter.dll"
    ]
  },

  "Hardware": {
    "Sensor": [
      // Motherboard
      {
        "Name": "motherboard_temperature",
        "Hardware": [ "SuperIO" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "motherboard_fan",
        "Hardware": [ "SuperIO" ],
        "Sensor": "Fan"
      },
      // CPU
      {
        "Name": "cpu_load",
        "Hardware": [ "Cpu" ],
        "Sensor": "Load"
      },
      {
        "Name": "cpu_clock",
        "Hardware": [ "Cpu" ],
        "Sensor": "Clock",
        "Exclude": [ { "Name": "Bus Speed" } ]
      },
      {
        "Name": "cpu_temperature",
        "Hardware": [ "Cpu" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "cpu_power",
        "Hardware": [ "Cpu" ],
        "Sensor": "Power",
        "Include": [ { "Name": "Package" } ]
      },
      {
        "Name": "cpu_voltage",
        "Hardware": [ "Cpu" ],
        "Sensor": "Voltage"
      },
      // GPU
      {
        "Name": "gpu_clock",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Clock"
      },
      {
        "Name": "gpu_clock",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Fan"
      },
      {
        "Name": "gpu_load",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Load",
        "Include": [ { "Name": "GPU Core" }, { "Name": "GPU Memory Controller" } ]
      },
      {
        "Name": "gpu_temperature",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "gpu_throughput",
        "Hardware": [ "GpuNvidia" ],
        "Sensor": "Throughput"
      },
      // Memory
      {
        "Name": "memory_load",
        "Hardware": [ "Memory" ],
        "Sensor": "Load"
      },
      // Storage
      {
        "Name": "storage_used",
        "Hardware": [ "Storage" ],
        "Sensor": "Load",
        "Include": [ { "Name": "Used Space" } ]
      },
      {
        "Name": "storage_throughput",
        "Hardware": [ "Storage" ],
        "Sensor": "Throughput"
      },
      {
        "Name": "storage_data",
        "Hardware": [ "Storage" ],
        "Sensor": "Data"
      },
      {
        "Name": "storage_temperature",
        "Hardware": [ "Storage" ],
        "Sensor": "Temperature"
      },
      {
        "Name": "storage_life",
        "Hardware": [ "Storage" ],
        "Sensor": "Level",
        "Include": [ { "Name": "Percentage Used" } ]
      },
      {
        "Name": "storage_spare",
        "Hardware": [ "Storage" ],
        "Sensor": "Level",
        "Include": [ { "Name": "Available Spare" } ]
      },
      // Network
      {
        "Name": "network_load",
        "Hardware": [ "Network" ],
        "Sensor": "Load"
      },
      {
        "Name": "network_throughput",
        "Hardware": [ "Network" ],
        "Sensor": "Throughput"
      },
      {
        "Name": "network_data",
        "Hardware": [ "Network" ],
        "Sensor": "Data"
      }
    ],
    "MemoryLoad": {
      "Name": "memory_usage",
      "Enable": true
    }
  },

  "PerformanceCounter": {
    "Counter": [
      // CPU
      {
        "Name": "cpu_usage",
        "Object": [
          {
            "Category": "Processor",
            "Counter": "% Processor Time"
          }
        ],
        "GraphCategory": "cpu",
        "GraphTitle": "CPU Usage",
        "GraphArgs": "-l 0 -u 100",
        "GraphDraw": "LINE"
      },
      {
        "Name": "cpu_queue",
        "Object": [
          {
            "Category": "System",
            "Counter": "Processor Queue Length"
          }
        ],
        "GraphCategory": "cpu",
        "GraphTitle": "Processor Queue Length",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      },
      // Memory
      {
        "Name": "memory_usage",
        "Object": [
          {
            "Category": "Memory",
            "Counter": "% Committed Bytes In Use"
          }
        ],
        "GraphCategory": "memory",
        "GraphTitle": "Memory Usage",
        "GraphArgs": "-l 0 -u 100",
        "GraphDraw": "LINE"
      },
      {
        "Name": "memory_page",
        "Object": [
          {
            "Category": "Memory",
            "Counter": "Pages/sec"
          }
        ],
        "GraphCategory": "memory",
        "GraphTitle": "Memory Pages/sec",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      },
      // Storage
      {
        "Name": "storage_free",
        "Object": [
          {
            "Category": "LogicalDisk",
            "Counter": "% Free Space"
          }
        ],
        "GraphCategory": "storage",
        "GraphTitle": "Disk Free",
        "GraphArgs": "-l 0 -u 100",
        "GraphDraw": "LINE"
      },
      {
        "Name": "storage_time",
        "Object": [
          {
            "Category": "LogicalDisk",
            "Counter": "% Disk Time"
          }
        ],
        "GraphCategory": "storage",
        "GraphTitle": "Disk Time",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      },
      {
        "Name": "storage_queue",
        "Object": [
          {
            "Category": "PhysicalDisk",
            "Counter": "Current Disk Queue Length"
          }
        ],
        "GraphCategory": "storage",
        "GraphTitle": "Disk Queue",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      },
      // Network
      {
        "Name": "network_connections",
        "Object": [
          {
            "Category": "TCPv4",
            "Counter": "Connections Established"
          },
          {
            "Category": "TCPv6",
            "Counter": "Connections Established"
          }
        ],
        "GraphCategory": "network",
        "GraphTitle": "Network Connections",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      },
      // System
      {
        "Name": "process",
        "Object": [
          {
            "Category": "System",
            "Counter": "Processes"
          },
          {
            "Category": "Process V2",
            "Counter": "Thread Count",
            "Instance": "_Total"
          }
        ],
        "GraphCategory": "system",
        "GraphTitle": "Process",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "AREA"
      },
      {
        "Name": "handle",
        "Object": [
          {
            "Category": "Process V2",
            "Counter": "Handle Count",
            "Instance": "_Total"
          }
        ],
        "GraphCategory": "system",
        "GraphTitle": "Handle",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "AREA"
      },
      {
        "Name": "uptime",
        "Object": [
          {
            "Category": "System",
            "Counter": "System Up Time",
            "Multiply": 1.1574074074074073e-005
          }
        ],
        "GraphCategory": "system",
        "GraphTitle": "Uptime",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "AREA"
      },
      // TODO IIS
      // TODO MSSQL
      // Hyper-V
      {
        "Name": "vm_count",
        "Object": [
          {
            "Category": "Hyper-V Virtual Machine Health Summary",
            "Counter": "Health Ok"
          },
          {
            "Category": "Hyper-V Virtual Machine Health Summary",
            "Counter": "Health Critical"
          },
          {
            "Category": "Hyper-V VM Vid Driver",
            "Counter": "VidPartitions"
          }
        ],
        "GraphCategory": "vm",
        "GraphTitle": "VM Count",
        "GraphArgs": "--base 1000 -l 0",
        "GraphDraw": "LINE"
      }
    ]
  },

  "Logging": {
    "EventLog": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning"
      }
    }
  }
}
